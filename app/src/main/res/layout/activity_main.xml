                            android:layout_height="match_parent"
                            android:paddingLeft="4dp"
                            android:paddingTop="64dp"
                            android:text="%"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/nanum_square_eb"
                            android:textSize="6pt" />

