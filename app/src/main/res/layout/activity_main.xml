                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/nanum_square_eb"
                                android:paddingLeft="2dp"
                                android:text="습도"
                                android:textColor="@color/color_middlegray"
                                android:textSize="12.5sp" />

